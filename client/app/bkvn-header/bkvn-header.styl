bkvn-header
  display           flex
  flex              1 0 auto
  justify-content   space-between
  align-items       center
  user-select       none

  margin            0px 16px

  .bkvn-logo-sm
    display       flex

    font-size     1.2rem
    font-weight   600

    text-align    center

    .bkvn-logo-sm-1
      padding                     4px
      border-top-left-radius      4px
      border-bottom-left-radius   4px

    .bkvn-logo-sm-2
      padding                     4px
      border-top-right-radius     4px
      border-bottom-right-radius  4px

  .bkvn-nav
    display     flex

    a
      margin      0px 16px
      padding     8px
      font-size   1.2rem

      transition  all 500ms ease-in-out

      &:hover
        transform translate(0px, -4px)
